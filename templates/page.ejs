<div class="post-grid">
    <div class="post-header">
        <%- header %>
        <div class="post-header-image">
            <img src="<%= page.image %>" alt="<%= page.imageAlt %>" />
        </div>
        <div class="post-title-container">
            <h1 class="post-title"><%= page.title %></h1>
        </div>
    </div>
    <div class="post-content">
        <div></div>
        <div class="post-body">
            <%- page.body %>
        </div>
        <%- footer %>
    </div>
</div>